# AI Link MCP Server Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
MAINNET_RPC_URL=https://api.mainnet-beta.solana.com

# Helius (Your Solana RPC)
HELIUS_API_KEY=your_helius_api_key_here

# Google/Gemini AI
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Perplexity AI
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Wallet (Optional - for trading features)
SOLANA_WALLET_PATH=/Users/ryanmolinich/.solana/keys/id.json
# OR use private key (less secure):
# SOLANA_PRIVATE_KEY=your_base58_private_key

# Drift Protocol
DRIFT_ENV=mainnet

# Flipside (Optional - for analytics)
FLIPSIDE_API_KEY=your_flipside_key

# Dune Analytics (Optional)
DUNE_API_KEY=your_dune_key

# OpenAI (Optional - for cloud agent)
OPENAI_API_KEY=your_openai_key

# Server Configuration
PORT=3000
AI_LINK_API_KEY=ai-link-secure-key-change-this

# Drift Protocol Wallet (if using Drift features)
DRIFT_WALLET_PRIVATE_KEY=optional_for_drift_trading

